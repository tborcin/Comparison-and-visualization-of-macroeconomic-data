<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    xmlns:xs="http://www.w3.org/2001/XMLSchema" exclude-result-prefixes="xs" version="1.0">

    <xsl:output method="xml" doctype-public="-//W3C//DTD XHTML 1.0 Strict//EN"
        doctype-system="http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd" encoding="UTF-8"
        indent="yes"/>

    <xsl:template match="/countries">
        <div class="gdp">
            <xsl:for-each select="country">
                <xsl:if test="./@country_name='Slovak Republic' or ./@country_name='Czech Republic' or ./@country_name='Germany'">
                <div id="{@country_id}">
                    <h2>
                        <xsl:value-of select="@country_name"/>
                    </h2>
                    <table border="1">
                        <tr>
                            <th>Year:</th>
                            <xsl:for-each select="*[position() = 1]/*">
                                <th>
                                    <xsl:value-of select="name(.)"/>
                                </th>
                            </xsl:for-each>
                        </tr>
			
                        <xsl:for-each select="year_data">
                            <xsl:if test="@year>2009">
                            <tr>
                                <th>
                                    <xsl:value-of select="@year"/>
                                </th>
                                <xsl:for-each select="*">
                                    <td>
                                        <xsl:value-of select="."/>
                                    </td>
                                </xsl:for-each>
                            </tr>
                            </xsl:if>
                        </xsl:for-each>

                    </table>
                    <hr/>
                </div>
		</xsl:if>
            </xsl:for-each>
        </div>
    </xsl:template>

</xsl:stylesheet>
